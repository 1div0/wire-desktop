{
  "name": "wire-desktop",
  "license": "LicenseRef-LICENSE",
  "private": true,
  "scripts": {
    "preinstall": "cd electron && npm install",
    "install": "cd electron && npm run rebuild-native-modules",
    "postinstall": "cd electron && npm run rebuild-neon",
    "start": "electron electron --inspect --devtools --enable-logging",
    "staging": "electron electron --inspect --devtools --enable-logging --env=staging",
    "prod": "electron electron --inspect --devtools --enable-logging --env=prod",
    "localhost": "electron electron --enable-sandbox --inspect --devtools --enable-logging --env=localhost",
    "test": "eslint electron && electron-mocha tests",
    "build:macos": "grunt macos-prod",
    "build:win": "grunt win-prod",
    "build:linux": "grunt linux-prod"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wireapp/wire-desktop.git"
  },
  "build": {
    "directories": {
      "buildResources": "resources",
      "app": "electron",
      "output": "wrap/dist"
    }
  },
  "devDependencies": {
    "electron": "1.7.2",
    "electron-builder": "18.8.1",
    "electron-mocha": "3.4.0",
    "electron-packager": "8.7.1",
    "electron-winstaller": "2.6.2",
    "eslint": "4.0.0",
    "grunt": "1.0.1",
    "grunt-contrib-clean": "1.1.0",
    "grunt-git": "1.0.3",
    "grunt-github-changes": "0.1.0",
    "load-grunt-tasks": "3.5.2"
  },
  "dependencies": {
    "debug": "^2.6.8",
    "finalhandler": "^1.0.3",
    "serve-static": "^1.12.3"
  }
}
