{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "es2016", "es2017.object"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "electron/js",
    "removeComments": true,
    "rootDir": "electron/src",
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": ["electron/js", "node_modules", "Gruntfile.js", "babel.config.js", "electron/locale", "electron/renderer", "tests", "webpack.config.js", "wrap"]
}
