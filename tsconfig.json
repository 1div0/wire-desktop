{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "jsx": "react",
    "lib": ["dom", "es2016", "es2017.object"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "electron/dist",
    "removeComments": true,
    "rootDir": "electron/src",
    "sourceMap": true,
    "target": "es5"
  },
  "include": ["electron/src/**/*", "electron/src/*"],
  "exclude": ["babel.config.js", "electron/dist", "electron/node_modules", "electron/renderer", "Gruntfile.js", "node_modules", "tests", "webpack.config.js", "wrap"]
}
